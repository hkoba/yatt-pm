# -*- coding: utf-8 -*-
FILE: doc/.htyattroot
IN:
 no_lineinfo: 0
 pagevars: pagevars

FILE: doc/lib/pagevars.pm
IN: package pagevars;
 use YATT::Util::VarExporter
   (index => {foo => "FOO", bar => "BARRR"
             , baz => bless(\ (my $cp = "foo<b>bar</b>baz"), __PACKAGE__)});
 sub varname {shift; 'html_'. shift}
 sub value {${shift()}}
 1;

FILE: doc/index.html
TITLE: pagevar, basic.
IN: &yatt:foo; &yatt:bar; &yatt:baz;
OUT: FOO BARRR foo<b>bar</b>baz
