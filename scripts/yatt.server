# Path setup.

use File::Basename;
use File::Spec;

# pathname without extension.
sub rootname {
  my ($basename, $dirname, $suffix) = fileparse(@_);
  join "", $dirname, $basename;
}

sub extension {
  my ($basename, $dirname, $suffix) = fileparse($_[0], qr{(?<=\.)\w+});
  $suffix;
}

sub follow_if_link {
  my ($fn) = @_;
  return $fn unless -l $fn;
  readlink $fn;
}

use lib grep {-d $_}
  dirname(__FILE__),
  rootname(follow_if_link(__FILE__),
	   qr{\.\w+}) . ".lib";

